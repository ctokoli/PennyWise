<div class="recipe-food-top-container">
    <div class="recipe-food-inner-container">
       <div class="nav">
            <div class="heading">
                <a href="/categories">
                    <img src="/assets/arrow-white.png" alt="arrow">
                </a>
                <h3>ADD TRANSACTION</h3>
                <h3 class="btn-hide">Login</h3>
            </div>
       </div>
        <%= form_with model:  @expense, url: category_expenses_path() do |f| %>
            <div class="f-post">
                <div class="f-label">
                    <%= f.text_field :name, class: "input", placeholder: "Transaction name", required: true %>
                </div>
                <div class="f-label">
                    <%= f.number_field :amount, class: "input", placeholder: "Amount", required: true %>
                </div>
                <div class="f-label">
                   <%= f.collection_select :category_id, @categories, :id, :name, class: "input-fiel" %>
                </div>
                <div class="link-submit">
                    <%= f.submit "Add Transaction", class: "add-submit" %>
                </div>
          </div>
        <% end %>
    </div>
</div>