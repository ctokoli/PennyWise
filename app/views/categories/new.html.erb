<div class="recipe-food-top-container">
    <div class="recipe-food-inner-container">
       <div class="nav">
            <div class="heading">
                <a href="/categories">
                    <%= image_tag 'arrow-white.png' %>
                </a>
                <h3>ADD CATEGORY</h3>
                <h3 class="btn-hide">Login</h3>
            </div>
       </div>
        <%= form_with model:  @category, url: categories_path() do |f| %>
            <div class="f-post">
                <div class="f-label">
                    <%= f.text_field :name, class: "input", placeholder: "Category name", required: true %>
                </div>
                <div class="f-label">
                    <%= f.text_field :image, class: "input", placeholder: "Add icon URL", required: true %>
                </div>
                <div class="link-submit">
                    <%= f.submit "Add Category", class: "add-submit" %>
                </div>
          </div>
        <% end %>
    </div>
</div>